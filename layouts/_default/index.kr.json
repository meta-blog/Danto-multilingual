{{ .Scratch.Add "index" slice }}
{{ range (where .Site.RegularPages "Type" "in" site.Params.mainSections) }}
  {{ if eq .Lang $.Site.Language.Lang }} <!-- 현재 언어 필터 추가 -->
    {{ $dateFormat := (.Site.Language.Params.dateFormat | default "2006-01-02") }}
    {{ $translations := dict }}
    {{ range .Translations }}
      {{ $translations = merge $translations (dict .Lang .Permalink) }}
    {{ end }}
    {{ $.Scratch.Add "index" (dict "title" .Title "content" (.Summary | plainify) "date" (.Date.Format $dateFormat) "permalink" .Permalink "image" (.Params.Image | absURL) "lang" .Lang "translations" $translations) }}
  {{ end }}
{{ end }}
{{ $.Scratch.Get "index" | jsonify }}